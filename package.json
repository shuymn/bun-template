{
  "name": "bun-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "lefthook install",
    "lint": "bunx biome lint .",
    "lint:fix": "bunx biome lint --fix .",
    "fmt": "bunx biome format --fix .",
    "fmt:check": "bunx biome format .",
    "typecheck": "bunx tsc --noEmit",
    "check": "bun run lint && bun run fmt:check && bun run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@tsconfig/bun": "^1.0.10",
    "@types/bun": "1.3.9",
    "lefthook": "^2.1.1",
    "typescript": "^5"
  }
}
